<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16.5dp"
        app:cardElevation="16.5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_marginRight="6dp"
                android:scaleType="fitCenter"/>

            <util.android.textviews.FontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Cabin-Bold"
                android:lines="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imageView"/>

            <util.android.textviews.ExpandableTextView
                android:id="@+id/synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:ellipsize="end"
                android:fontFamily="Cabin-Regular"
                android:textSize="16sp"
                app:expandColor="#f72adb"
                app:trimLength="2"
                android:layout_alignLeft="@+id/title"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>